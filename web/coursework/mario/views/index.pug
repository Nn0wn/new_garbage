extends layout

block content
    div(class="w3-container")
        div(id="id01" class="w3-modal" style='display: block')
            div(style="width:500px;" class="w3-modal-content w3-animate-zoom w3-card-4")
                header(class="w3-container w3-red")
                    h2 Hello, new Player
                div(class="w3-container")
                    label Enter your name
                    input(class="w3-input w3-border" type="text" id='name')
                div(class='w3-bar')
                    div(class='w3-bar-item')
                        a(class='w3-button w3-red' onclick='saveName()' href='/game') To the game

    script.
        function saveName() {
            localStorage['game.name'] = document.getElementById('name').value;
        }
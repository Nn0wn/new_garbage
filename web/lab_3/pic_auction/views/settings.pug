extends main_template

block content
    form
        div(class="w3-row")
            div(class="w3-col s-12 m-6")
                label Дата начала
                input(type="date" class="w3-input" id="date_input" value="2012-12-21")
            p
            div(class="w3-col s-12 m-6")
                label Время начала
                input(type="time" class="w3-input" id="time_input" value="12:34")
            p
            div(class="w3-col s-12 m-6")
                label Время на продажу
                input(type="time" class="w3-input" id="sell_timeout_input" value="12:34")
            p
            div(class="w3-col s-12 m-6")
                label Время на изучение
                input(type="time" class="w3-input" id="info_interval_input" value="00:03")
            p
block sidebar
    button(type="button" class="w3-bar-item w3-button w3-red w3-hover-white w3-border w3-border-black" onclick="save_settings()" style='text-align: center') Сохранить

block scripts
    script(src='/js/settings.js')